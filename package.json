{
  "name": "lpc_hub",
  "version": "1.0.0",
  "description": "LPC but crossplatform",
  "author": "ejz <ejzeronik@gmail.com>",
  "main": "hubMain.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl",
    "start": "electron .",
    "postinstall": "install-app-deps",
    "install": "electron-rebuild",
    "build": "electron build --output public"
  },
  "build": {
    "appId": "com.LpcHub.app",
    "icon": "build/icon.ico",
    "mac": {
      "icon": "build/icon.icn",
      "category": "public.app-category.developer-tools"
    }
  },
  "dependencies": {
    "electron": "latest",
    "electron-is-dev": "^1.1.0",
    "serialport": "^6.2.2",
    "tedious": "^2.6.4"
  },
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "^20.28.1",
    "electron-rebuild": "^1.8.2"
  }
}
