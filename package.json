{
  "name": "lpc_hub",
  "version": "1.1.2",
  "description": "LPC but crossplatform",
  "author": "Ethan Zeronik",
  "main": "hubMain.js",
  "license": "MIT",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "start": "electron .",
    "install": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.zeronik.app",
    "productName": "Liquid Pixel Hub",
    "artifactName": "${name}_${os}_${arch}_${version}-setup.${ext}",
    "nsis": {
      "artifactName": "${name}_${os}_${arch}_${version}-setup.${ext}",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "win": {
      "icon": "./SvgIcons/icon.ico"
    },
    "mac": {
      "icon": "build/icon.icn",
      "category": "public.app-category.developer-tools"
    },
    "extraFiles": [
      "./changelog.txt"
    ],
    "publish": [
      {
        "provider": "generic",
        "url": "https://lpcupdatecloud.blob.core.windows.net/downloads"
      }
    ]
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-updater": "^4.2.0",
    "serialport": "^8.0.5"
  },
  "devDependencies": {
    "electron": "^6.1.5",
    "electron-builder": "^20.44.4",
    "electron-rebuild": "^1.8.8"
  }
}
